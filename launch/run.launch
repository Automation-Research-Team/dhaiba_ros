<?xml version="1.0" ?>
<launch>

  <arg name="op"		default="pub"/>
  <arg name="participant"	default="dhaiba_ros_bridge"/>
  <arg name="element"		default="tf"/>
  <arg name="name"		default="/tf"/>
  <arg name="type"		default="tf2_msgs/TFMessage"/>
  <arg name="remember"		default="false"/>
  <arg name="timeout"		default="0"/>

  <node name="$(anon dhaiba_ros_bridge)"
	pkg="dhaiba_ros" type="dhaiba_ros_bridge.py"
  	args="$(arg op) $(arg name) $(arg participant) $(arg element)"
	if="$(eval op == 'pub')"/>

  <node name="$(anon dhaiba_ros_bridge)"
	pkg="dhaiba_ros" type="dhaiba_ros_bridge.py"
  	args="$(arg op) $(anon dhaiba_ros_bridge)
	      $(arg participant)/$(arg element) $(arg name) $(arg type)"
	if="$(eval op == 'sub')"/>

  <node name="$(anon dhaiba_ros_bridge)"
	pkg="dhaiba_ros" type="dhaiba_ros_bridge.py"
  	args="$(arg op) $(arg participant)
	      $(arg element)Request.Note $(arg element)Response.Note
	      $(arg name) $(arg type)"
	if="$(eval op == 'srv')"/>

  <node name="$(anon dhaiba_ros_bridge)"
	pkg="dhaiba_ros" type="dhaiba_ros_bridge.py"
  	args="$(arg op) $(arg participant)
	      $(arg element)Goal.Note $(arg element)Feedback.Note
	      $(arg element)Result.Note $(arg name) $(arg type)
	      $(arg remember) $(arg timeout)"
	if="$(eval op == 'act')"/>

</launch>
